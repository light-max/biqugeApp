<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifengqiang.biquge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.笔趣阁"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.bookshelf.BookShelfActivity" />
        <activity
            android:name=".ui.bookadd.BookAddActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".ui.search.SearchBookActivity" />
        <activity android:name=".ui.bookdetails.BookDetailsActivity" />
        <activity android:name=".ui.content.ContentActivity" />
        <activity android:name=".ui.chapter.ChapterActivity" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:label="设置" />
    </application>

</manifest>